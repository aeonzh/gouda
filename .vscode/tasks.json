{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start B2B Web Server",
      "type": "shell",
      "command": "pnpm b2B",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".*",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting Metro Bundler",
            "endsPattern": "Web is waiting on http://localhost:8081"
          }
        }
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Start B2C Web Server",
      "type": "shell",
      "command": "pnpm b2c",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".*",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting Metro Bundler",
            "endsPattern": "Web is waiting on http://localhost:8080"
          }
        }
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
