{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "packages/shared/*": ["../../packages/shared/*"],
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "jest-globals.d.ts"
  ],
  "references": [
    {
      "path": "../../packages/shared"
    }
  ]
}
