{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["nativewind/types", "expo-router"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "packages/shared/*": ["../../packages/shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "../../packages/shared/global.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "references": [
    {
      "path": "../../packages/shared"
    }
  ]
}
