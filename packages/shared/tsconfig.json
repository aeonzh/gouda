{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "composite": true,
    "emitDeclarationOnly": true
  },
  "include": ["index.ts", "api/**/*.ts", "components/**/*.tsx", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
